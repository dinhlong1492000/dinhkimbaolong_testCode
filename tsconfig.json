{
    "compilerOptions": {
      "outDir": "build",
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "allowJs": true,
      "strictNullChecks": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["es6", "dom"],
      "types": ["reflect-metadata", "mocha","node"],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "noImplicitAny": false,
      "paths": {
          "@n-services/*": ["services/*"],
          "@n-services": ["services/index"],
          "@n-middlewares/*": ["middlewares/*"],
          "@n-repositories/*": ["repositories/*"],
          "@n-repositories": ["repositories/index"],
          "@n-utils/*": ["utils/*"],
          "@n-errors/*": ["errors/*"],
          "@n-constants/*": ["constants/*"],
          "@n-loggers/*": ["loggers/*"],
          "@n-models/*": ["models/*"],
          "@n-configs/*": ["configs/*"],
          "@n-types/filters": ["types/filters/index"],
          "@n-types/*": ["types/*"],
          "@n-database/*": ["database/*"],
          "@n-controllers/*": ["controllers/*"],
          "@n-controllers": ["controllers/index"],
          "@n-routes/*": ["routes/*"],
          "@n-validators/requests/*": ["validators/requests/*"],
          "@n-queues": ["queues/index"],
          "@n-types": ["types/index"],
          "@n-sanitizers": ["sanitizers/index"],
          "@n-apis/*": ["apis/*"],
          "@n-adapters/*": ["adapters/*"],
          "@n-templates/*": ["templates/*"]
        }
    },
    "include": [
      "src/**/*.ts","views/*.ejs"],
    "exclude": [
      "node_modules"
    ]
  }
  